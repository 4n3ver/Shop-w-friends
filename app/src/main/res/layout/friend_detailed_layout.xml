<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/detailed_listed_friend"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/friend_detailed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Name"/>


        <TextView
            android:id="@+id/friend_detailed_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_detailed_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Username"/>

        <TextView
            android:id="@+id/friend_detailed_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_detailed_user_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Email"/>

        <TextView
            android:id="@+id/id_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_detailed_email"
            android:text="Rating : "
            tools:text="Rating : "/>

        <TextView
            android:id="@+id/friend_detailed_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_detailed_email"
            android:layout_toRightOf="@id/id_rating"
            tools:text="Rating"/>

        <TextView
            android:id="@+id/id_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_rating"
            android:text="Report Count : "
            tools:text="Report Count : "/>


        <TextView
            android:id="@+id/friend_detailed_report_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_detailed_rating"
            android:layout_toRightOf="@id/id_count"
            tools:text="Count"/>


        <Button
            android:id="@+id/temporary_remove"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Remove"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>