<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/add_friend_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/interest_user_image"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/defmen_black"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/interest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:text="User"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/interest_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:src="@drawable/ic_send"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:text="Item Name "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"/>

            <AutoCompleteTextView
                android:id="@+id/interest_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:hint="3D Printed Robotic Hand"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:text="Maximum price "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:text="$"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/interest_item_price"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:hint="99"
                android:maxLines="1"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>