<LinearLayout
    android:id="@+id/fragmentLogin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"

    android:background="#0099CC"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.howdoicomputer.android.shoppingwithfriends.act.WelcomeAct">

<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:background="#3b5998"
        android:drawableLeft="@drawable/ic_fb_swf"
        android:gravity="center_vertical"
        android:text="Sign In"
        android:textColor="#fefefe"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="#d8337799"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <AutoCompleteTextView
            android:id="@+id/frag_login_usrName_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User name"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#b1fefefe"/>

        <EditText
            android:id="@+id/frag_login_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:imeActionLabel="Sign in"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#b1fefefe"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Sign in"
            android:maxLines="1"
            android:singleLine="true"/>

        <Button
            android:id="@+id/cancelLogin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Cancel"
            android:maxLines="1"
            android:onClick="cancel"
            android:singleLine="true"/>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="100dp"
        android:src="@drawable/swf1"/>

</LinearLayout>
